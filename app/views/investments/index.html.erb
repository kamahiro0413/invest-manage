<div class="wrapper">

  <%= render "shared/side_bar" %>
 
  <div class="investments">
    <div class="invest-header">
      <div class="invest-botton">
       <i class="fas fa-donate"><%= link_to " 情報を入力", new_group_investment_path(@group) %></i>
      </div>
      <div class="invest-title">
       <%= @group.name %>
       <div class="invest-users">
         <% @group.users.each do |user| %>
         <%= user.nickname %>
         <% end %>
       </div>
      </div>
      <div class="invest-total">
        <%= "グループ内資産#{@total}円" %>
      </div>
    </div>

    <div class="calendar">
      <%= month_calendar events: @investments do |date, investments| %>
      <%= date.day %>
      <% investments.each do|investment|%>
      <p><%= link_to "#{investment.money.to_s(:delimited)}円 ", group_investment_path(id: investment.id) %><%= investment.user.nickname %></p>
      
      <% end %>
      <% end %>
      </div>
      </div>
  </div>
</div>
